FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      alpha.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [];

internalField   uniform 0;

boundaryField
{
    boundSymmetry
    {
        type            symmetry;
    }

    inlet
    {
        type            fixedValue;
	value		uniform 1;
    }

    fluid_to_solid
    {
    	type            zeroGradient;
    }
}


